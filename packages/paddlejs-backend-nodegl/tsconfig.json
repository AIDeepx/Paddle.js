{
    "extends": "../../tsconfig",
    "include": [
        "src/"
    ],
    "exclude": [
        "node_modules/"
    ],
    "ts-node": {
        "transpileOnly": true
    },
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "preserveConstEnums": true,
        "strict": true,
        "target": "es2017",
        "outDir": "lib",
        "types": ["node"]
    }
}